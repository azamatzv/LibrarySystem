<Window x:Class="LibraryApplication.View.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApplication.View"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Full Name:" Margin="5"/>
            <TextBox x:Name="FullNameTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Username:" Margin="5"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Password:" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>
            <TextBlock Text="Phone Number:" Margin="5"/>
            <TextBox x:Name="PhoneNumberTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Date of Birth:" Margin="5"/>
            <DatePicker x:Name="DateOfBirthPicker" Width="200" Margin="5"/>
            <Button Content="Sign Up" Width="200" Margin="5" Click="SignUpClicked"/>
        </StackPanel>
    </Grid>
</Window>
